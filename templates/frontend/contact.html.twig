{% apply spaceless %}
<!DOCTYPE html>
<html lang="{{ app.request.locale | default('fr') }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=5.0">
    <meta name="language" content="{{ app.request.locale | default('fr') }}">
    <meta name="author" content="devscast.tech, contact@devscast.tech">
    <meta name="robots" content="index">
    <meta name="robots" content="follow">
    <link rel="icon" type="image/png" href="{{ asset('/images/indabax.png') }}" />
    <meta name="description" content="Un Deep Learning Indabað• est un Indaba ou une confÃ©rence organisÃ©e localement qui permet de s'assurer que les connaissances et les capacitÃ©s en matiÃ¨re d'apprentissage automatique sont plus largement diffusÃ©es sur le continent africain."/>
    <meta name="keywords" content="Congo, DRC, RDC, Deep Learning, Indabax, apprentissage automatique">
