</head>
<body class="bg-black text-white">
    {% include 'frontend/component/_header.html.twig' %}
    <section id="programme" class="pt-28 relative z-10">
        <div class="container m-auto px-6 py-20 md:px-12 lg:px-20">
            <div class="m-auto text-center lg:w-7/12">
                <h2 class="mb-16 text-4xl font-bold text-white md:text-4xl lg:text-6xl">Programme</h2>
            </div>
            <div class="relative pb-12">
                <input aria-hidden="true" type="checkbox" name="day" id="day" class="peer" hidden />
                <label role="tablist" for="day" class="peer-checked:[first-child]:origin-right relative mx-auto grid h-24 grid-cols-2 border-b border-gray-700 py-4">
                    <div class="indicator absolute left-0 right-0 bottom-0 h-0.5 origin-left scale-x-[.5] bg-primary duration-300 peer-checked:origin-right"></div>
                    <div role="tab" class="cursor-pointer day-1">
                        <h3 class="text-3xl">Jour 1</h3>
                        <p class="text-gray-400">{{ event.eventStartsAt | date('d M')}}</p>
                    </div>
                    <div role="tab" class="cursor-pointer day-2 opacity-50">
                        <h3 class="text-3xl">Jour 2</h3>
                        <p class="text-gray-400">{{ event.eventEndsAt | date('d M') }}</p>
                    </div>
                </label>
                <div class="mt-16 peer-checked:hidden">
                    {% for schedule in schedule.day_1 %}
                        <div class="group flex flex-col -space-y-6 sm:flex-row sm:gap-12 sm:space-y-0">
                            <span class="ml-6 block text-gray-300 sm:ml-0 sm:mt-[2.55rem] sm:w-3/12 sm:text-right">{{ schedule.time }}</span>
                            <div class="relative border-l border-gray-700 py-10 pl-6 before:absolute before:left-[-6.5px] before:top-1.5 before:h-3 before:w-3 before:rounded-full before:border-[3px] before:border-gray-900 before:bg-gray-400 before:hover:bg-secondary sm:w-9/12 sm:before:top-12">
                                {% if schedule.speaker %}
                                    <p class="text-wihte mb-4 text-lg font-medium">{{ schedule.speaker }}</p>
                                {% endif %}
                                <h4 class="text-xl font-semibold sm:text-2xl">{{ schedule.subject }}</h4>
                                {% if schedule.room %}
                                    <div class="mt-4 flex w-max gap-2 border border-gray-700 p-2 group-hover:bg-gray-800">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6 text-gray-400 group-hover:text-gray-200">
                                            <path class="group-hover:text-secondary/80" stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                                        </svg>
                                        <span class="font-medium text-gray-300">{{ schedule.room }}</span>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="mt-16 hidden peer-checked:block">
                    {% for schedule in schedule.day_2 %}
                        <div class="group flex flex-col -space-y-6 sm:flex-row sm:gap-12 sm:space-y-0">
                            <span class="ml-6 block text-gray-300 sm:ml-0 sm:mt-[2.55rem] sm:w-3/12 sm:text-right">{{ schedule.time }}</span>
                            <div class="relative border-l border-gray-700 py-10 pl-6 before:absolute before:left-[-6.5px] before:top-1.5 before:h-3 before:w-3 before:rounded-full before:border-[3px] before:border-gray-900 before:bg-gray-400 before:hover:bg-secondary sm:w-9/12 sm:before:top-12">
                                {% if schedule.speaker %}
                                    <p class="text-wihte mb-4 text-lg font-medium">{{ schedule.speaker }}</p>
                                {% endif %}
                                <h4 class="text-xl font-semibold sm:text-2xl">{{ schedule.subject }}</h4>
                                {% if schedule.room %}
                                    <div class="mt-4 flex w-max gap-2 border border-gray-700 p-2 group-hover:bg-gray-800">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6 text-gray-400 group-hover:text-gray-200">
                                            <path class="group-hover:text-secondary/80" stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                                        </svg>
                                        <span class="font-medium text-gray-300">{{ schedule.room }}</span>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
    {% include 'frontend/component/_footer.html.twig' %}
</body>
</html>
