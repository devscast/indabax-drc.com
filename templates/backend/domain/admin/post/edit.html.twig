{% extends 'backend/shared/layout/base.html.twig' %}
{% block title "Editer un article" | title %}

{% block header %}
    {% embed "backend/shared/component/_header.html.twig" %}
        {% block header_title "Editer un article" %}
        {% block header_action_list %}
            <li>
                <a href="{{ path('admin_post_index') }}" class="btn btn-white btn-dim btn-outline-light">
                    {{ 'arrow-long-left' | icon }}
                    <span>tous les articles</span>
                </a>
            </li>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}
    {% embed "backend/shared/component/card/_simple.html.twig" %}
        {% block simple_card_body %}
            {% include 'backend/shared/component/_form.html.twig' %}
        {% endblock %}
    {% endembed %}
{% endblock %}
